---
import ServiceLayout from '../../layouts/ServiceLayout.astro';
import { getServices } from '../../utils/services';

export async function getStaticPaths() {
  const puppies = getServices();
  return puppies.map(puppy => ({
    params: { slug: puppy.id },
    props: { puppy },
  }));
}

const { puppy } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": puppy.name,
  "description": puppy.description,
  "image": puppy.image,
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock",
    "priceCurrency": "USD",
    "price": "TBD"
  },
  "brand": {
    "@type": "Brand",
    "name": "StarsDogs"
  }
};
---

<ServiceLayout
  title={`Cachorro Teckel ${puppy.name}`}
  description={puppy.description}
  ogImage={puppy.image}
>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <article class="service">
    <header>
      <h1>{puppy.name}</h1>
      <img
        src={puppy.image}
        alt={puppy.name}
        class="service__image"
        width="1200"
        height="630"
      />
    </header>

    <div class="service__content">
      <p>{puppy.description}</p>
      <p><strong>Edad:</strong> {puppy.age}</p>
    </div>

    <footer class="service__cta">
<a href="https://wa.me/573218021869" class="btn btn--primary">
        Â¡Quiero a {puppy.name}!
      </a>
    </footer>
  </article>
</ServiceLayout>
