---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import { getServices } from '../../utils/services';

const puppies = getServices();
---

<Layout
  title="Cachorros Teckel en Venta | Adopta un Dachshund"
  description="Descubre nuestros adorables cachorros Teckel (Dachshund) disponibles para la venta. Encuentra tu nuevo compañero peludo en StarsDogs."
>
  <main class="services-page">
    <div class="services-page__header">
      <h1>Nuestros Cachorros Teckel</h1>
      <p>Conoce a nuestros adorables compañeros</p>
    </div>

    <div class="services-page__grid">
      {puppies.map(puppy => (
        <ServiceCard
          title={puppy.name}
          description={puppy.description}
          image={puppy.image}
          url={`/servicios/${puppy.id}`}
          duration={`Edad: ${puppy.age}`}
        />
      ))}
    </div>
  </main>
</Layout>
