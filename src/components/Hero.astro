---
// Importar estilos de Swiper
import 'swiper/css';
import 'swiper/css/effect-fade';
import 'swiper/css/autoplay';
---

---

<section class="hero" aria-label="Sección principal">

  <div class="hero__container">
    <div class="hero__content">
      <h1 class="hero__title">
        <span class="hero__title-main">Encuentra tu</span>
        <span class="hero__title-highlight">Compañero Perfecto</span>
      </h1>

      <p class="hero__subtitle">
        Cachorros Teckel criados con amor, listos para ser parte de tu familia
      </p>

      <div class="hero__badges">
        <div class="hero__badge">
          <span class="hero__badge-number">10+</span>
          <span class="hero__badge-text">Años de Experiencia</span>
        </div>
        <div class="hero__badge">
          <span class="hero__badge-number">500+</span>
          <span class="hero__badge-text">Familias Felices</span>
        </div>
        <div class="hero__badge">
          <span class="hero__badge-number">100%</span>
          <span class="hero__badge-text">Garantía de Salud</span>
        </div>
      </div>
      <div class="hero__cta">
        <a
          href="https://wa.me/573218021869"
          class="hero__button hero__button--primary"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="hero__button-icon"
          >
            <path
              d="M12.031 6.172c-3.181 0-5.767 2.586-5.768 5.766-.001 1.298.38 2.27 1.019 3.287l-.582 2.128 2.182-.573c.978.58 1.911.928 3.145.929 3.178 0 5.767-2.587 5.768-5.766.001-3.187-2.575-5.77-5.764-5.771zm3.392 8.244c-.144.405-.837.774-1.17.824-.299.045-.677.063-1.092-.069-.252-.08-.575-.187-.988-.365-1.739-.751-2.874-2.502-2.961-2.617-.087-.116-.708-.94-.708-1.793s.448-1.273.607-1.446c.159-.173.346-.217.462-.217l.332.006c.106.005.249-.04.39.298.144.347.491 1.2.534 1.287.043.087.072.188.014.304-.058.116-.087.188-.173.289l-.26.304c-.087.086-.177.18-.076.354.101.174.449.741.964 1.201.662.591 1.221.774 1.394.86s.274.072.376-.043c.101-.116.433-.506.549-.68.116-.173.231-.145.39-.087s1.011.477 1.184.564c.173.087.289.129.332.202.043.073.043.423-.101.827z"
            ></path>
          </svg>
          Consultar Disponibilidad
        </a>
        <a href="#cachorros" class="hero__button hero__button--secondary">
          Ver Cachorros
        </a>
      </div>
    </div>

    <div class="hero__carousel">
      <div class="swiper hero__desktop-swiper">
        <div class="swiper-wrapper">
          {[1, 2, 3, 4, 5].map((num) => (
            <div class="swiper-slide">
              <img
                src={`/images/cachorros/teckel_0${num}.jpg`}
                alt={`Cachorro Teckel ${num}`}
                class="hero__carousel-image"
                loading={num === 1 ? "eager" : "lazy"}
                width="600"
                height="800"
              />
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <div class="hero__scroll">
    <span class="hero__scroll-text">Desliza para explorar</span>
    <div class="hero__scroll-icon"></div>
  </div>
</section>

<script>
  import Swiper from 'swiper';
  import { Autoplay, EffectFade } from 'swiper/modules';

  // Inicializar Swiper
  new Swiper('.hero__desktop-swiper', {
    modules: [Autoplay, EffectFade],
    effect: 'fade',
    autoplay: {
      delay: 3500,
      disableOnInteraction: false,
    },
    loop: true,
  });

  // Parallax effect con throttling para mejor rendimiento
  let ticking = false;
  document.addEventListener("mousemove", (e: MouseEvent) => {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        const moveX = (e.clientX - window.innerWidth / 2) * 0.02;
        const moveY = (e.clientY - window.innerHeight / 2) * 0.02;
        const hero = document.querySelector(".hero__content") as HTMLElement;
        if (hero) {
          hero.style.transform = `translate3d(${moveX}px, ${moveY}px, 0)`;
        }
        ticking = false;
      });
      ticking = true;
    }
  });
</script>
